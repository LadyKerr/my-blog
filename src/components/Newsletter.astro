<style>
    .newsletter {
        background-color: #FFFBEB;
        padding: 4rem 0;
        text-align: center;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .newsletter-content {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    h2 {
        color: #1F2937;
        font-size: 2.25rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .lead {
        color: #4B5563;
        font-size: 1.25rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .benefits {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
        margin: 2rem 0;
    }

    .benefit-item {
        text-align: center;
    }

    .icon {
        font-size: 2rem;
        margin-bottom: 1rem;
        display: inline-block;
    }

    .benefit-item h3 {
        color: #1F2937;
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .benefit-item p {
        color: #6B7280;
        font-size: 0.875rem;
        line-height: 1.5;
    }

    .subscribe-form {
        max-width: 500px;
        margin: 0 auto;
    }

    .form-group {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
    }

    input {
        flex: 1;
        padding: 0.875rem 1rem;
        border: 2px solid #D1D5DB;
        border-radius: 0.375rem;
        font-size: 1rem;
        outline: none;
        transition: all 0.2s ease;
    }

    input:focus {
        border-color: #2563EB;
        box-shadow: 0 0 0 2px rgba(37, 99, 235, 0.1);
    }

    button {
        background: #2563EB;
        color: white;
        font-weight: 600;
        padding: 0.875rem 1.5rem;
        border: none;
        border-radius: 0.375rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    button:hover {
        background: #1D4ED8;
        transform: translateY(-1px);
    }

    .privacy-note {
        color: #6B7280;
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }

    @media (max-width: 768px) {
        .benefits {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .form-group {
            flex-direction: column;
        }

        button {
            width: 100%;
        }

        h2 {
            font-size: 1.875rem;
        }

        .lead {
            font-size: 1.125rem;
        }
    }
</style>