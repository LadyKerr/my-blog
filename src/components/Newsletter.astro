<section class="newsletter">
    <div class="container">
        <h2>Subscribe to My Newsletter</h2>
        <p>Get the latest articles, tutorials, and developer tips delivered straight to your inbox.</p>
        <form class="subscribe-form">
            <input 
                type="email" 
                placeholder="Your email address" 
                required
                aria-label="Email address"
            />
            <button type="submit">Subscribe</button>
        </form>
    </div>
</section>

<style>
    .newsletter {
        background-color: #FFFBEB;
        padding: 3rem 0;
        text-align: center;
    }

    .container {
        max-width: 600px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    h2 {
        color: #1F2937;
        font-size: 1.875rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
    }

    p {
        color: #4B5563;
        font-size: 1.125rem;
        margin-bottom: 2rem;
        line-height: 1.6;
    }

    .subscribe-form {
        display: flex;
        gap: 0.75rem;
        max-width: 500px;
        margin: 0 auto;
    }

    input {
        flex: 1;
        padding: 0.75rem 1rem;
        border: 1px solid #D1D5DB;
        border-radius: 0.375rem;
        font-size: 1rem;
        outline: none;
        transition: border-color 0.2s ease;
    }

    input:focus {
        border-color: #2563EB;
    }

    button {
        background: #2563EB;
        color: white;
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 0.375rem;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }

    button:hover {
        background: #1D4ED8;
    }

    @media (max-width: 640px) {
        .newsletter {
            padding: 2rem 0;
        }

        .subscribe-form {
            flex-direction: column;
        }

        button {
            width: 100%;
        }

        h2 {
            font-size: 1.5rem;
        }

        p {
            font-size: 1rem;
        }
    }
</style>